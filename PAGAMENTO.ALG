Algoritmo "pagamento"


Var

   N : caractere
   Vh : real
   Ht : inteiro
   P: real

Inicio

   escreval("Nome: ")
   leia(N)
   escreval("Valor por hora: ")
   leia(Vh)
   escreval("Horas trabalhadas: ")
   leia(Ht)
   
   P <- Vh * Ht
   
   escreval("O Pagamento para ", N, " deve ser ", P:8:2)



   

Fimalgoritmo